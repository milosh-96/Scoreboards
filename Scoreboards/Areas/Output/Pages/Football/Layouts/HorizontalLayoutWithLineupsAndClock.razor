@using Scoreboards.Models.Football;
<div class="container scoreboard">
    <div class="layout">
        <div class="row">
            <div class="col col-md-5 home-team">
                <ul class="list-group lineups">
                    @foreach (var item in ViewModel.HomeTeam.Players)
                    {
                        <li class="list-group-item text-end">
                            <span>
                                @item.LastName
                            </span>
                            <span>
                                @item.ShirtNumber
                            </span>
                        </li>
                    }
                </ul>
            </div>
            <div class="col col-md-2 info">
                <div class="score-screen">
                    @*<div class="row">
                        <div class="col-6">
                            <img src="https://uploads.termappy.com/sportsglobe/football/eng/arsenal-fc.png" class="img-fluid" />
                        </div>
                        <div class="col-6">
                            <img src="https://uploads.termappy.com/sportsglobe/football/eng/arsenal-fc.png" class="img-fluid" />
                        </div>
                    </div>*@
                    <div>
                        @ViewModel.HomeTeam.Score-@ViewModel.AwayTeam.Score

                    </div>
                </div>
                <div class="clock">
                    @ViewModel.GetClockString()
                </div>
            </div>
            <div class="col col-md-5 away-team">
                <ul class="list-group lineups">
                    @foreach (var item in ViewModel.AwayTeam.Players)
                    {
                        <li class="list-group-item">
                            <span>
                                @item.ShirtNumber
                            </span>
                            <span>
                                @item.LastName
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
        
    </div>
</div>

@code {
    [Parameter]
    public FootballScoreboardViewModel ViewModel { get; set; } = new FootballScoreboardViewModel();
}

<style>
    body {
        background:@ViewModel.HomeTeam.AccentColorHex;
        font-size:24px;
        color:#fefefe;
    }
    .score-screen {
        background:linear-gradient(to top,#111,#111 20%,transparent);
        width:100%;
        height:35vh;
        padding:10px;
        font-size:64px;
        text-align:center;
        box-shadow: 5px 5px 1px rgba(255,255,255,0.2);
        margin-bottom:40vh;
    }
    .lineups > li {
        background:rgba(0,0,0,0.4);
        color:inherit;
        text-transform:uppercase;
    }
    .clock {
        background:rgba(255,255,255,0.2);
        box-shadow:5px 5px 1px rgba(255,255,255,0.2);
        font-size:48px;
        padding:10px;
        text-align:center;

    }
</style>