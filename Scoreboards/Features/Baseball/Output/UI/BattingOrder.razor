@using Scoreboards.Data.Baseball;
<div class="ui-batting-order">
    <div class="head" style="display:flex">
        <div class="team-name">
            @Team.Name
        </div>
        
    </div>
        <div class="content-body">
            <ul>
            <li class="item" style="display:flex">
                <div class="shirt-number-column">#</div>
                <div class="name-column">Name</div>
                <div class="position-column">Pos</div>
                @if (ShowStats)
                {
                    <div>H</div>
                    <div>BB</div>
                    <div>K</div>
                }
            </li>
            @foreach (var item in Team.Lineup)
            {
                <li class="item" style="display:flex">
                    <div class="shirt-number-column">@item.ShirtNumber</div>
                    <div class="name-column">@item.ToString()</div>
                    <div class="position-column">@BaseballPositionsEnumHandler.DisplayTwoLetterAbbreviation(item.Position)</div>
                    @if(ShowStats)
                    {
                        <div>0</div>
                        <div>0</div>
                        <div>0</div>
                    }
                </li>
            }
            </ul>
        </div>
    </div>
@code {
    [Parameter]
    public BaseballTeam Team { get; set; } = new BaseballTeam();

    [Parameter]
    public bool ShowStats { get; set; } = true;

}

