@using Scoreboards.Data;
@using Scoreboards.Data.Football;
<div class="substitution single">
    <div class="out height-50">
       @EventBus.Data.FirstOrDefault(x=>x.Key==FootballEventsDataKeysEnum.Substitution_SubbedOutPlayer).Value
    </div>
    <div class="in height-50">
        @EventBus.Data.FirstOrDefault(x=>x.Key==FootballEventsDataKeysEnum.Substitution_SubbedInPlayer).Value
    </div>
</div>
@code {
    [Parameter]
    public FootballEventBus EventBus { get; set; } = new FootballEventBus();
}

<style>
    .substitution .out,.substitution .in {
        display:flex;
        align-items:center;
        justify-content:center;
    }
</style>